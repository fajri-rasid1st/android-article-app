    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav"
    app:startDestination="@id/main_fragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.example.myprofileapp.profile_fragment"
        android:label="fragment_profile_fragment"
        tools:layout="@layout/fragment_profile_fragment" />

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.example.myprofileapp.main_fragment"
        android:label="fragment_main_fragment"
        tools:layout="@layout/fragment_main_fragment" />

    <fragment
        android:id="@+id/article_fragment"
        android:name="com.example.myprofileapp.article_fragment"
        android:label="fragment_article_fragment"
        tools:layout="@layout/fragment_article_fragment" />

